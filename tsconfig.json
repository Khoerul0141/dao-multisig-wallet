{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./frontend/components/*"],
      "@/pages/*": ["./frontend/pages/*"],
      "@/styles/*": ["./frontend/styles/*"],
      "@/utils/*": ["./frontend/utils/*"],
      "@/hooks/*": ["./frontend/hooks/*"],
      "@/types/*": ["./frontend/types/*"],
      "@/contracts/*": ["./contracts/*"],
      "@/typechain-types/*": ["./typechain-types/*"]
    },
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./typechain-types"
    ],
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "hardhat.config.ts",
    "hardhat.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "test/**/*",
    "scripts/**/*",
    "typechain-types/**/*",
    "frontend/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "cache",
    "artifacts",
    "coverage",
    "test/unit/tempCodeRunnerFile.ts"
  ],
  "ts-node": {
    "esm": false,
    "files": true,
    "transpileOnly": true
  }
}